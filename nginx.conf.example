# Nginx 配置示例
# 如果使用 Nginx 服务器，请将以下配置添加到服务器配置中

server {
    listen 80;
    server_name aonbit.jp;
    return 301 https://aonbit.co.jp$request_uri;
}

server {
    listen 80;
    server_name aonbit.co.jp;
    
    # 禁止访问 .git 目录（重要！）
    location ~ /\.git {
        deny all;
        return 403;
    }
    
    # 禁止访问其他隐藏文件和敏感文件
    location ~ /\. {
        deny all;
        return 403;
    }
    
    # 禁止访问特定文件类型
    location ~ \.(git|env|log|md|sh)$ {
        deny all;
        return 403;
    }
    
    # 网站根目录
    root /path/to/your/website;
    index index.html;
    
    location / {
        try_files $uri $uri/ =404;
    }
    
    # 其他配置...
}
